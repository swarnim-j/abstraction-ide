{
    "name": "Pseudocode",
    "scopeName": "source.pseudocode",
    "fileTypes": ["pseudo"],
    "patterns": [
        {
            "name": "comment.line.pseudocode",
            "match": "//.*$"
        },
        {
            "name": "comment.block.pseudocode",
            "begin": "/\\*",
            "end": "\\*/"
        },
        {
            "name": "keyword.control.pseudocode",
            "match": "\\b(if|then|else|while|for|do|return|when|unless|repeat|until)\\b"
        },
        {
            "name": "keyword.operator.pseudocode",
            "match": "\\b(is|are|has|have|contains|equals|greater than|less than|not|and|or)\\b"
        },
        {
            "name": "entity.name.function.pseudocode",
            "match": "\\b([A-Za-z_][A-Za-z0-9_]*\\s*\\()"
        },
        {
            "name": "string.quoted.double.pseudocode",
            "begin": "\"",
            "end": "\""
        },
        {
            "name": "string.quoted.single.pseudocode",
            "begin": "'",
            "end": "'"
        },
        {
            "name": "constant.numeric.pseudocode",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
            "name": "variable.parameter.pseudocode",
            "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
    ]
} 