{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["(", ")"],
        ["[", "]"]
    ],
    "autoClosingPairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "\"", "close": "\"" }
    ],
    "surroundingPairs": [
        ["(", ")"],
        ["[", "]"],
        ["\"", "\""]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(CLASS|FUNCTION|IF|ELSE|WHILE|FOR)\\b.*$",
        "decreaseIndentPattern": "^\\s*(ENDIF|ENDWHILE|ENDFOR|RETURN)\\b.*$"
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
} 